            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/album"
            android:text="@string/ocr_album"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/insert_photo_sea_36x36"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
